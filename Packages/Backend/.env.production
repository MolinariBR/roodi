# Backend production environment
NODE_ENV=production
PORT=3333
API_VERSION=1.0.0
APP_VERSION=1.0.0

# Runtime and observability
LOG_LEVEL=info
REQUEST_TIMEOUT_MS=10000
SENTRY_DSN=

# Global platform state
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=

# Network and CORS
ADMIN_WEB_URL=https://admin.roodi.app
LANDING_WEB_URL=https://roodi.app
CORS_ALLOWED_ORIGINS=https://admin.roodi.app,https://roodi.app

# Database and cache
DATABASE_URL=postgresql://<user>:<password>@<host>:5432/roodi_prod?schema=public
REDIS_URL=redis://<host>:6379
REDIS_PREFIX=roodi:prod

# Auth and session
JWT_ISSUER=roodi.app
JWT_AUDIENCE=roodi-api
JWT_ACCESS_SECRET=replace-in-secret-manager
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=replace-in-secret-manager
JWT_REFRESH_EXPIRES_IN=30d
AUTH_PASSWORD_HASH_ALGORITHM=bcrypt
AUTH_PASSWORD_HASH_ROUNDS=12
OTP_CODE_LENGTH=6
OTP_EXPIRES_MINUTES=10
OTP_MAX_ATTEMPTS=5
OTP_RESEND_COOLDOWN_SECONDS=60

# Distance, time and weather providers
TOMTOM_API_KEY=replace-in-secret-manager
OPENROUTESERVICE_API_KEY=replace-in-secret-manager
OPENWEATHER_API_KEY=replace-in-secret-manager
MET_NO_BASE_URL=https://api.met.no/weatherapi/locationforecast/2.0/compact
GOOGLE_MAPS_API_KEY=

# Payments
INFINITEPAY_API_BASE_URL=https://api.infinitepay.io
INFINITEPAY_API_KEY=replace-in-secret-manager
INFINITEPAY_HANDLE=replace-in-secret-manager
INFINITEPAY_WEBHOOK_SECRET=replace-in-secret-manager
INFINITEPAY_WEBHOOK_URL=https://api.roodi.app/v1/payments/infinitepay/webhook
