# Backend development environment
NODE_ENV=development
PORT=3333
API_VERSION=1.0.0
APP_VERSION=1.0.0

# Runtime and observability
LOG_LEVEL=debug
REQUEST_TIMEOUT_MS=10000
SENTRY_DSN=

# Global platform state
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=

# Network and CORS
ADMIN_WEB_URL=http://localhost:3001
LANDING_WEB_URL=http://localhost:3002
CORS_ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3002

# Database and cache
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/roodi_dev?schema=public
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=roodi:dev

# Auth and session
JWT_ISSUER=roodi.local
JWT_AUDIENCE=roodi-api
JWT_ACCESS_SECRET=change-me-dev-access-secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=change-me-dev-refresh-secret
JWT_REFRESH_EXPIRES_IN=30d
AUTH_PASSWORD_HASH_ALGORITHM=bcrypt
AUTH_PASSWORD_HASH_ROUNDS=12
OTP_CODE_LENGTH=6
OTP_EXPIRES_MINUTES=10
OTP_MAX_ATTEMPTS=5
OTP_RESEND_COOLDOWN_SECONDS=60
RESEND_API_BASE_URL=https://api.resend.com
RESEND_API_KEY=
RESEND_FROM_EMAIL=
RESEND_REPLY_TO=

# Distance, time and weather providers
TOMTOM_API_KEY=
OPENROUTESERVICE_API_KEY=
OPENWEATHER_API_KEY=
MET_NO_BASE_URL=https://api.met.no/weatherapi/locationforecast/2.0/compact
GOOGLE_MAPS_API_KEY=

# Payments
INFINITEPAY_API_BASE_URL=https://api.infinitepay.io
INFINITEPAY_API_KEY=
INFINITEPAY_HANDLE=
INFINITEPAY_WEBHOOK_SECRET=
INFINITEPAY_WEBHOOK_URL=http://localhost:3333/v1/payments/infinitepay/webhook
