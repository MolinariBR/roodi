# Backend production environment
NODE_ENV=production
PORT=3333
API_VERSION=1.0.0
APP_VERSION=1.0.0

# Runtime and observability
LOG_LEVEL=info
REQUEST_TIMEOUT_MS=10000
SENTRY_DSN=

# Global platform state
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=

# Network and CORS
ADMIN_WEB_URL=https://admin.roodi.app
LANDING_WEB_URL=https://roodi.app
CORS_ALLOWED_ORIGINS=https://admin.roodi.app,https://roodi.app

# Database and cache
DATABASE_URL=postgresql://roodi:RoodiProd123456@localhost:5432/roodi?schema=public
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=roodi:prod

# Auth and session
JWT_ISSUER=roodi.app
JWT_AUDIENCE=roodi-api
JWT_ACCESS_SECRET=roodi_prod_access_please_rotate_32chars_min
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=roodi_prod_refresh_please_rotate_32chars_min
JWT_REFRESH_EXPIRES_IN=30d
AUTH_PASSWORD_HASH_ALGORITHM=bcrypt
AUTH_PASSWORD_HASH_ROUNDS=12
OTP_CODE_LENGTH=6
OTP_EXPIRES_MINUTES=10
OTP_MAX_ATTEMPTS=5
OTP_RESEND_COOLDOWN_SECONDS=60
RESEND_API_BASE_URL=https://api.resend.com
RESEND_API_KEY=
RESEND_FROM_EMAIL=
RESEND_REPLY_TO=

# Web (Frontend-admin + Landing) - centralizado aqui via symlink
NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_WEB_URL=https://admin.roodi.app
NEXT_PUBLIC_SITE_URL=https://roodi.app
NEXT_PUBLIC_API_BASE_URL=https://api.roodi.app
NEXT_PUBLIC_SENTRY_DSN=
LEADS_WEBHOOK_URL=https://api.roodi.app/v1/public/leads
LEADS_WEBHOOK_TOKEN=roodi_prod_change_me

# Distance, time and weather providers
TOMTOM_API_KEY=
OPENROUTESERVICE_API_KEY=
OPENWEATHER_API_KEY=
MET_NO_BASE_URL=https://api.met.no/weatherapi/locationforecast/2.0/compact
GOOGLE_MAPS_API_KEY=

# Payments
INFINITEPAY_API_BASE_URL=https://api.infinitepay.io/invoices/public/checkout/links
INFINITEPAY_API_KEY=
INFINITEPAY_HANDLE=rejourney
INFINITEPAY_WEBHOOK_SECRET=
INFINITEPAY_WEBHOOK_URL=https://api.roodi.app/v1/payments/infinitepay/webhook
