{
  "name": "@roodi/backend",
  "version": "0.1.0",
  "description": "Roodi backend API",
  "private": true,
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "main": "dist/src/main.js",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node dist/src/main.js",
    "env:check": "tsx scripts/check-local-services.ts",
    "db:reset": "tsx scripts/prisma-task.ts reset",
    "db:migrate": "tsx scripts/prisma-task.ts migrate",
    "db:seed": "tsx scripts/prisma-task.ts seed",
    "db:rebuild": "tsx scripts/prisma-task.ts rebuild",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^6.16.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.69.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.3",
    "pino": "^10.3.1",
    "redis": "^5.10.0",
    "socket.io": "^4.8.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^8.57.1",
    "prisma": "^6.16.0",
    "supertest": "^7.0.0",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
