{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/Core/*"],
      "@modules/*": ["src/Modules/*"],
      "@src/*": ["src/*"]
    },
    "types": ["node", "vitest/globals"]
  },
  "include": ["src", "scripts", "tests", "prisma", "vitest.config.ts"]
}
